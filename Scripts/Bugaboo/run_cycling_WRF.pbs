#!/bin/bash
# MOAB/Torque submission script for Bugaboo (WestGrid)

## queue/PBS settings
#PBS -l nodes=10:ppn=12
#PBS -l pmem=1000MB
#PBS -l feature=x5650
#PBS -l walltime=12:00:00
